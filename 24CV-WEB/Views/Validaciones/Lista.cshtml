@model IEnumerable<_24CV_WEB.Models.Curriculum>

<h1 class="text-center">Lista de curriculums</h1>

<div class="row">
	<div class="col-12">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Apellido</th>
					<th>Fecha de nacimiento</th>
					<th>CURP</th>
					<th>Ruta Foto</th>
					<th>Foto</th>
					<th>Accion</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model) 
				{
					<tr>
						<td>@item.Nombre</td>
						<td>@item.Apellidos</td>
						<td>@item.FechaNacimiento</td>
						<td>@item.CURP</td>
						<td>@item.RutaFoto</td>
						<td>
							@if(!string.IsNullOrEmpty(item.RutaFoto))
							{
							<img src="~/Fotos/@item.RutaFoto" width="150" height="150" />
							}
						</td>
						<td class="d-flex flex-column gap-2">
							<a href="@Url.Action("Curriculum", "Validaciones", new { id = item.Id })" class="btn btn-primary">Ver Curriculum</a>
							<a href="@Url.Action("IrEditar", "Validaciones", new { id = item.Id })" class="btn btn-secondary">Editar</a>
							<a href="@Url.Action("Eliminar", "Validaciones", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>